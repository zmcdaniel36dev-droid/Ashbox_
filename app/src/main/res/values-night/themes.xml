<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Ashbox" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_coral</item>
        <item name="colorPrimaryVariant">@color/accent_coral</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Switch colors for unchecked state -->
        <item name="colorSurfaceVariant">@color/charcoal_grey_2</item>
        <item name="colorOutline">@color/charcoal_grey</item>

    </style>

    <style name="Theme.Ashbox.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ashbox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ashbox.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>